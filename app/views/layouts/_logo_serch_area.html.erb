<%# <% else %>
  <div class="container-fluid">
<%# <% end %>

  <div class="row">
    <div class="d-flex col-lg-7">
      <div class="row d-flex align-items-center w-100">

      <% if false %>
        <div class="d-flex align-items-center col-sm-5">
          <a class="logo_link" href="#">
            <%= image_tag("logo.png", size: "100x100") %>
          </a>
          <div class="text-center">
            <p class="app-sub mb-0">レシピ共有アプリ</p>
            <p class="app-name mb-0">Resiper</p>
          </div>
        </div>
      <% end %>

        <div class="px-3 my-2 col-sm-7">
          <%= search_form_for @q do |f| %>
            <div class="row search-area m-0 p-0">
              <div class="p-0 col-9">
                <%= f.search_field :title_or_user_name_or_material_cont, placeholder: "キーワード検索", class: "form-control" %>
              </div>
              <div class="p-0 pl-1 col-3">
                <input type="submit" value="&#xf002;" class="fas btn btn-outline-success w-100 search-btn h-100">
                
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="d-flex align-items-center col-lg-5">
      <div class="w-100 col-sm-6 p-0 mr-1">
        <%= link_to new_post_path, class:"show-btn  w-100" do %>
          <i class="far fa-edit"></i> 新規投稿
        <% end %>
      </div>

      <div class="w-100 col-sm-6 p-0 ml-1">
        <%= link_to  posts_list_path, class:"myfolder-btn w-100" do %>
          <i class="fas fa-heart"></i> Myフォルダ
        <% end %>
      </div>
    </div>
  </div>
</div>