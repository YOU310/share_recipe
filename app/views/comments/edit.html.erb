<h4>コメント編集</h4>

<%= render "layouts/error_messages_comment" %>

<%= form_with model: [@post, @comment], local: true do |f| %>
  <div class="newpost-area mx-auto">
    <div>
      <div class="newpost-col"><%= f.label :title %></div>
      <p><%= f.text_field :title, class:"w-100" %></p>
    </div>
    <div>
      <div class="newpost-col"><%= f.label :content %></div>
      <p><%= f.text_area :content, class:"w-100" %></p>
    </div>
    <div>
      <div class="newpost-col"><%= f.label :image %></div>
      <p><%= f.file_field :image, class: "w-100" %></p>
    </div>
    <div>
      <%= f.submit t(".post"), class: 'btn-post w-100' %>
    </div>
  </div>
<% end %>






















